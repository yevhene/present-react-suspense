    <h3>SlowContent</h3>

    <pre><code class="javascript" data-trim contenteditable>
const cache = { status: false };

function wait(time) {
  if (cache.status) {
    return;
  }
  cache.status = true;

  throw new Promise((resolve) =&gt;
    setTimeout(() =&gt; resolve(), time)
  );
}

function SlowContent(props) {
  wait(1500);
  return <h3>Slow Content</h3>;
}
